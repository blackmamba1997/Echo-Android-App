<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_us_bg"
    android:clickable="true">

    <ImageView
        android:id="@+id/about_us_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/pepe" />

    <TextView
        android:id="@+id/about_us_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_us_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:text="Pepe the frog"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about_us_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_us_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="Creator of Echo Music App !!"
        android:textAlignment="center"
        android:textColor="#E0E0E0"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/about_us_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_us_text2"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="Version : 1.0"
        android:textAlignment="center"
        android:textColor="#BDBDBD"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>